<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.TextView.Title" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextView.Title.Light" parent="AppTheme.TextView.Title">
        <item name="android:textColor">@color/colorTextMedium</item>
    </style>

    <style name="AppTheme.TextView.Title.Small.Light" parent="AppTheme.TextView.Title">
        <item name="android:textColor">@color/colorTextMedium</item>
        <item name="android:textSize">@dimen/title_text_size_small</item>
    </style>

    <style name="AppTheme.TextView.Title.Big" parent="AppTheme.TextView">
        <item name="android:textColor">@color/colorTextMedium</item>
        <item name="android:textSize">@dimen/title_text_size_big</item>
    </style>

    <style name="AppTheme.TextView.Label.Big" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/label_text_size_big</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextView.Label.Medium" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="AppTheme.TextView.Label.Small" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/label_text_size_small</item>
    </style>

</resources>
